{
    "family": "splk-demo",
    "networkMode": "awsvpc",

    "containerDefinitions": [
        {
            "name": "splk-agent",
            "image": "quay.io/signalfx/signalfx-agent:5.4.4",
            "entryPoint": [
                "bash",
                "-c"
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "ecs",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "splk-agent"
                }
            },
            "command": [
                "curl --fail $CONFIG_URL > /etc/signalfx/agent.yaml && exec /bin/signalfx-agent"
            ],
            "environment": [
                {
                    "name": "ACCESS_TOKEN",
                    "value": "iggr1oMNzzoIbvsfjGq90Q"
                },
                {
                    "name": "INGEST_URL",
                    "value": "https://ingest.us1.signalfx.com"
                },
                {
                    "name": "API_URL",
                    "value": "https://api.us1.signalfx.com"
                },
		{   "name": "SIGNALFX_ENDPOINT_URL",
		    "value": "https://ingest.us1.signalfx.com/v2/trace"
		},
                {
                    "name": "CONFIG_URL",
                    "value": "https://raw.githubusercontent.com/slernersplunk/splunkobservability/master/apm/agent/fargate/agent.yaml"
                }
            ],
            "dockerLabels": {
                "app": "splk-agent"
            }
        },
        {
            "name": "python-trace-generator",
            "image": "stevelsplunk/sfx-python:latest",
            "entryPoint": [
                "bash",
                "-c"
            ],
            "portMappings": [],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "ecs",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "autogen"
                }
            },
	    "workingDirectory": "/home/code",
            "command": [
                "sh run-autogen.sh"
            ],
            "environment": [
                {
                    "name": "SIGNALFX_SERVICE_NAME",
                    "value": "python-trace-generator"
                },
                {
                    "name": "SIGNALFX_ENDPOINT_URL",
                    "value": "http://localhost:9080/v1/trace"
                }
            ],
            "dockerLabels": {
                "app": "python-trace-generator"
            }
	}
    ],
    "executionRoleArn": "arn:aws:iam::668132022375:role/ECS-task-full-access",
    "cpu": "256",
    "memory": "512",
    "requiresCompatibilities": [
        "FARGATE"
    ]
}
